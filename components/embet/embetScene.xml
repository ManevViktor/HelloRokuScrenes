<?xml version="1.0" encoding="utf-8"?> 

<component name="embetRoot" extends="Group" initialFocus="embetSectionsList">
    <interface>
        <field id="focusChanged" type="string" />
        <field id="size" type="assocArray" />
        <field id="dataUpdate" type="assocArray" onChange="onPuBnubUpdate" />
        <field id="configCache" type="assocArray" />
    </interface>
    <script type="text/brightscript" uri="pkg:/components/embet/embetScene.brs" />
    <script type="text/brightscript" uri="pkg:/components/embet/odds/util.brs" />
    <script type="text/brightscript" uri="realdeal/pubnubrunner.brs" />

    <children>
        <Rectangle focusable="false"
                   id="embetOddsRoot"
                   width="410"
                   height="850"
                   color="0x000000">

            <Rectangle focusable="false"
                       id="embetOddsHeader"
                       width="410"
                       height="70"
                       color="0x000000B4">
                         
                <Poster loadDisplayMode="scaleToZoom"
                        id="embetOddsSponsorLogo"
                        translation="[5,0]"
                        width="130"
                        height="55"
                        uri="pkg:/images/ic_test_bg.png" />

                <Label id="embetOddsHeaderText"
                       font="font:SmallestSystemFont"
                       horizAlign="end"
                       focusable="true"
                       height="55"
                       vertAlign="center"
                       text="Place Bet" />
            </Rectangle>

            <Rectangle id="embetOddsBodyInfo"
                       translation="[0, 50]"
                       width="410"
                       height="70"
                       color="0x000000">
                <Label width="410"
                       height="70"
                       horizAlign="center"
                       font="font:SmallestSystemFont"
                       vertAlign="center"
                       id="embetOddsInformation"
                       text="Tapp on ODSS"
                       translation="[0,0]"
                       color="0xFFFFFF" />

            </Rectangle>

            <Rectangle id="oddsListRect"
                       translation="[0, 120]"
                       width="410"
                       height="300"
                       color="0x000000">
                <!-- <oddsBodylist id="embetOddsList" focusable="true" /> -->
                <!-- <embetMarkUP id="exampleMarkupGrid" />  -->
                <embetSections id="embetSectionsList" />
            
            </Rectangle>
                         
        </Rectangle>

            
     

    </children>

    
</component>