                  <!-- <FloatFieldInterpolator key="[0, 0.5, 1]" keyValue="[ 0.2, 1, 0.2 ]" fieldToInterp="bottomRectangle.opacity" /> -->
                  <FloatFieldInterpolator id="colorchangeRectangle" key="[0.0, 1.0]" keyValue="[ 70, 230 ]" fieldToInterp="bottomRectangle.height" />
                  <FloatFieldInterpolator id="colorchangeRectangle25" key="[0.0, 1.0]" keyValue="[ 70, 200 ]" fieldToInterp="discLabel.height" />
            </Animation>

            <Animation id="collapseAnimation" repeat="false" duration="0.5" easeFunction="linear">
                  <!-- <FloatFieldInterpolator key="[0, 0.5, 1]" keyValue="[ 0.2, 1, 0.2 ]" fieldToInterp="bottomRectangle.opacity" /> -->
                  <Vector2DFieldInterpolator key="[0, 1]" keyValue="[ [2, -152], [2,0 ] ]" fieldToInterp="bottomRectangle.translation" /> 
                  <!-- <FloatFieldInterpolator key="[0, 0.5, 1]" keyValue="[ 0.2, 1, 0.2 ]" fieldToInterp="bottomRectangle.opacity" /> -->
