<?xml version="1.0" encoding="utf-8"?> 

  
<component name="oddsListItem" extends="Group">
      
      <interface > 
            <field id="itemContent" type="node" onChange="itemContentChanged" alwaysNotify="true" /> 
      </interface>
 
      <script type="text/brightscript">

            <![CDATA[

    sub init()
      m.labelHome = m.top.findNode("labelHome") 
      m.labelHome.font.size = 17
    

      m.labelMarket = m.top.findNode("labelMarket")
       m.labelMarket.font.size = 17
      m.labelAway = m.top.findNode("labelAway")
       m.labelAway.font.size = 17
    end sub

    sub itemContentChanged()

    ?"on contentChanged"
      itemcontent = m.top.itemContent
      m.labelHome.text = itemcontent.teamHomeOdds
      m.labelMarket.text = itemcontent.marketName
       m.labelAway.text = itemcontent.teamAwayOdds
    end sub

   ]]></script>


            <children>

                  <Rectangle id="oddsHoriz" visible= "true" color="0x272727d5" height="50" width="400">
                        <LayoutGroup id="childernOdds"  translation="[ 0, 0 ]"  itemSpacings="[10]" layoutDirection="horiz">
                              
                              <Rectangle width = "70" height="50" color="0x123212">
                              <Label id="labelHome"
                                     color="0xffffff"
                                     height="50"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                     font="font:SmallestSystemFont"
                                     text="0xEB1010FF"></Label>
                              </Rectangle>

                              <Label id="labelMarket"
                                     color="0xffffff"
                                     height="50"
                                     width="240"
                                     font="font:SmallestSystemFont"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"></Label>

                              <Rectangle width = "70" height="50" color="0x123212">
                              <Label color="0xffffff"
                                     id="labelAway"
                                     height="50"
                                     font="font:SmallestSystemFont"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"/>
                                     </Rectangle>
                        </LayoutGroup>

                  </Rectangle>


                    <Rectangle id="oddsVertical" visible= "false" color="0x272727d5" height="50" width="400">
                        <LayoutGroup id="childernOdds"  translation="[ 0, 0 ]"   itemSpacings="[10]" layoutDirection="vertical">
                              
                              <Rectangle width = "70" height="50" color="0x123212">
                              <Label id="vertlabelHome"
                                     color="0xffffff"
                                     height="50"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                     font="font:SmallestSystemFont"
                                     text="0xEB1010FF"></Label>
                              </Rectangle>

                              <Label id="vertlabelMarket"
                                     color="0xffffff"
                                     height="50"
                                     width="240"
                                     font="font:SmallestSystemFont"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"></Label>

                              <Rectangle width = "70" height="50" color="0x123212">
                              <Label color="0xffffff"
                                     id="vertlabelAway"
                                     height="50"
                                     font="font:SmallestSystemFont"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"/>
                                     </Rectangle>
                        </LayoutGroup>

                  </Rectangle>

            </children>

      </component>