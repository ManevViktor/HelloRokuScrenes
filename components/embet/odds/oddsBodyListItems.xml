<?xml version="1.0" encoding="utf-8"?> 

  
<component name="oddsListItem" extends="Group">
      
      <interface > 
             <field id="itemContent" type="node" onChange="itemContentChanged" alwaysNotify="true"/> 
      </interface>
 
      <script type="text/brightscript">

            <![CDATA[

    sub init()
      m.labelHome = m.top.findNode("labelHome") 
      m.labelMarket = m.top.findNode("labelMarket")
      m.labelAway = m.top.findNode("labelAway")
    end sub

    sub itemContentChanged()

    ?"on contentChanged"
      itemcontent = m.top.itemContent
      ?"content ="  itemContent 
      m.labelHome.text = itemcontent.teamHomeOdds
      m.labelMarket.text = itemcontent.marketName
       m.labelAway.text = itemcontent.teamAwayOdds
    end sub

   ]]></script>


            <children>

                  <Rectangle  height="90" width="400">
                        <LayoutGroup id="childernOdds" translation="[ 0, 0 ]" itemSpacings="[0]" layoutDirection="horiz">
                              <Label id="labelHome"
                                     color="0x262626FF"
                                     height="40"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                      font="font:SmallestSystemFont"
                                     text="0xEB1010FF"></Label>

                              <Label id="labelMarket"
                                     color="0x262626FF"
                                     height="40"
                                     width="240"
                                      font="font:SmallestSystemFont"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"></Label>

                              <Label color="0x262626FF"
                                     id="labelAway"
                                     height="40"
                                      font="font:SmallestSystemFont"
                                     width="70"
                                     horizAlign="center"
                                     vertAlign="center"
                                     text="0xEB1010FF"></Label>
                        </LayoutGroup>

                  </Rectangle>

            </children>

      </component>