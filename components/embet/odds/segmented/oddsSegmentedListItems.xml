<?xml version="1.0" encoding="utf-8"?> 

  
<component name="oddsSegmentedItems" extends="Group">
      
      <interface > 
            <field id="itemContent" type="node" onChange="itemContentChanged" alwaysNotify="true" />   
      </interface>

      <script type="text/brightscript" uri="oddsSegmentedItems.brs" />
      
      <children>
                              
            <Rectangle visible="true"
                       id="rectMarkUp"
                       width="70"
                       height="50"
                       color="0x123212">
                  <Label id="labelMarkup"
                         color="0xffffff"
                         height="50"
                         width="70"
                         horizAlign="center"
                         vertAlign="center"
                         font="font:SmallestSystemFont"></Label>
            </Rectangle>


            <Rectangle width="50" height ="50"  id="marketVertPoster" color="0x000000d4" visible="false">
                  <Poster translation="[7,7]"  loadDisplayMode="scaleToZoom" width="35" height="35" uri="pkg:/images/team.jpg" />       
            </Rectangle>


                
            <Rectangle visible="false"
                       width="270"
                       height="50"
                       translation="[-20,0]"
                       id="marketVertTeam"
                       color="0x000000">                
                     
                  <Label id="itemTextTeamName"
                         height="50"
                         translation="[5,0]"
                         vertAlign="center"
                         horizAlign="left"
                         width="400"
                         font="font:SmallestSystemFont"
                         text="Warriors"
                         color="0xffffff" />                 
            </Rectangle>



            <Rectangle id="mvertoutcome" width="70" height="50"  color="0x000000" visible="false">
                  <Label width="70"
                         height="50"
                         font="font:SmallestSystemFont"
                         vertAlign="center"
                         horizAlign="center"
                         id="voutcome"
                         text="+370"
                         color="0xffffff" />         
            </Rectangle>

         

      </children>
</component>